#include <iostream>
#include <cmath>
#include <iomanip>
using namespace std;

double f(double x,int& n)
{
	double e = 0.0001;
	n = 0;
	double s = 0;
	double a = 1;
	double i = 2;
	double c = x * x ;
	while (a >= e)
	{
		s += a;
		a = c / (i * (i + 2));
		c *= x;
		i += 2;
		n++;
	}
	return s;
}

int main()
{
	double eps = 0.000001;
	double a = 0.2;
	double b = 0.6;
	double h = 0.1;
	int d;
	for (double i = a; i <= b+eps; i+=h)
	{
		cout << fixed << setprecision(5) << i << " " << f(i, d) << " " << d << endl;
	}
}
