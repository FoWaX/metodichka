
#include <iostream>
#include<cmath>
using namespace std;

int main()
{
	int k;
	int n = 0;
	long double x, s, a, b, c;
	cin >> k >> x;
	a = 1;
	b = -1;
	c = x;
	s = (b * c) / a;
	for (int i = n+1; i <= k; i++)
	{
		a *= (2 * i) * (2 * i + 1);
		b *= -1;
		c *= x * x;
		s += (b * c) / a;
	}
	cout << s;
}

