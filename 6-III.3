#include <iostream>
using namespace std;

int main()
{
    const int n = 4;
    int a[n][n];
    for (int i = 0; i < n;i++)
    {
        for (int z = 0;z < n;z++)
        {
            a[i][z] = z;
        }
    }
    for (int i = 0; i < n;i++)
    {
        for (int z = 0;z < n;z++)
        {
            cout << a[i][z] << "";
        }
        cout << endl;
    }
    int g = n-1;
    for (int i = 0; i < n;i++)
    {
        cout << a[i][g];
        g--;
    }
}


